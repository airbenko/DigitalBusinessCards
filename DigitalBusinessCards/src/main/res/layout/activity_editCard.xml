<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Create Card"
        android:id="@+id/textView"
        android:layout_marginTop="47dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/firstText"
        android:layout_marginTop="32dp"
        android:hint="First"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lastText"
        android:hint="Last "
        android:layout_alignTop="@+id/firstText"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/saveButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phoneText"
        android:layout_below="@+id/firstText"
        android:layout_alignLeft="@+id/firstText"
        android:layout_alignRight="@+id/textView"
        android:hint="Phone Number" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emailText"
        android:layout_below="@+id/phoneText"
        android:layout_alignLeft="@+id/phoneText"
        android:layout_alignRight="@+id/textView"
        android:hint="Email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/webText"
        android:layout_below="@+id/emailText"
        android:layout_alignLeft="@+id/emailText"
        android:layout_alignRight="@+id/emailText"
        android:hint="Website" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/saveButton"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/webText"
        android:layout_toRightOf="@+id/firstText" />

</RelativeLayout>